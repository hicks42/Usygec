<!DOCTYPE html>
<html lang="{{ app.request.locale }}">

	<head>
		{% block head %}
			<meta charset="utf-8"/>
			<meta http-equiv="x-ua-compatible" content="ie=edge"/>
			<meta name="description" content=""/>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<title>
				{% block title %}{% endblock %}
			</title>
			<link
			rel="shortcut icon" type="image/x-icon" href="assets/images/favicon.svg"/>
			<!-- Place favicon.ico in the root directory -->

			{% block stylesheets %}
				{{ encore_entry_link_tags('app') }}
			{% endblock %}

			{% block javascripts %}
				{{ encore_entry_script_tags('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		{% block body %}
			{{ include('main/partials/_header.html.twig') }}
			{{ include('main/partials/_preloader.html.twig') }}
			{% block content %}{% endblock %}
			{{ include('main/partials/_footer.html.twig') }}
		{% endblock %}
	</body>
</html>
