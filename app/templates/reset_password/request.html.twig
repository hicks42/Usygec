{% extends 'ezreview_base.html.twig' %}

{% block title %}Modification du mot de passe
{% endblock %}

{% block body %}
	<div class="row de-flex justify-content-center">
		<div class="col-12 col-sm-8 col-lg-6 px-2 my-3">
			{% for flash_error in app.flashes('reset_password_error') %}
				<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
			{% endfor %}
			<h1>Modifier le mot de passe</h1>

			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
			<div class="mt2">
				<small>
					Un lien sera envoy√© a cet addresse mail pour changer votre mot de passe.
				</small>
			</div>
			<div class="row de-flex justify-content-center">
				<button class="btn btn-primary btn-sm w-25 mt-3">Envoyer</button>
			</div>
			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}
