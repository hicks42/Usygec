{% extends 'base.html.twig' %}

{% block title %}Usygec - contact.
{% endblock %}

{% block content %}
	<!-- Start Breadcrumbs -->
	<div class="breadcrumbs">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 col-12">
					<div class="breadcrumbs-content">
						<h1 class="page-title">Contactez moi</h1>
						<p>Profitez de mon réseau de jeunes professionnels sur la région stéphanoise
							<br>
							Référencement, campagne de communication multi support etc...
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Breadcrumbs -->

	<!-- Start Contact Area -->
	<section id="contact-us" class="contact-us section">
		<div class="container">
			<div class="contact-head wow fadeInUp" data-wow-delay=".4s">
				<div class="row">
					<div class="col-lg-5 col-12">
						<div class="single-head">
							<div class="contant-inner-title">
								<h4>Contact
								</h4>
								<p>Patrice Gerin developpeur Full stack .</p>
							</div>
							<div class="single-info">
								<i class="lni lni-phone"></i>
								<ul>
									<li>+33 06 64 25 67 04</li>
								</ul>
							</div>
							<div class="single-info">
								<i class="lni lni-envelope"></i>
								<ul>
									<li><a href="mailto:info@yourwebsite.com">p.gerin@usygec.fr</a></li>
								</ul>
							</div>
							<div class="single-info">
								<i class="lni lni-map"></i>
								<ul>
									<li>22 rue José Fappa 42000 St Etienne France.</li>
								</ul>
							</div>
							<div class="contact-social">
								<h5>Suivez moi</h5>
								<ul>
									<li><a href="https://www.linkedin.com/in/patrice-gerin/"><span class="icon-1"><i class="lni lni-linkedin-original"></i></span><span class="icon-2"><i class="lni lni-linkedin-original"></i></span></a></li>
								</ul>
							</div>
						</div>
					</div>
					<div class="col-lg-7 col-12">
						<div class="form-main">
							{{ form_start(form) }}
							<div class="row">
								<div class="col-lg-6 col-12 my-2">
									<div class="form-group">
										{{ form_row(form.name) }}
									</div>
								</div>
								<div class="col-lg-6 col-12 my-2">
									<div class="form-group">
										{{ form_row(form.subject) }}
									</div>
								</div>
								<div class="col-lg-6 col-12 my-2">
									<div class="form-group">
										{{ form_row(form.email) }}
									</div>
								</div>
								<div class="col-lg-6 col-12 my-2">
									<div class="form-group">
										{{ form_row(form.phone) }}
									</div>
								</div>
								<div class="col-12 my-2">
									<div class="form-group message">
										{{ form_row(form.message) }}
									</div>
								</div>
							</div>
							<div class="d-flex justify-content-center">
								<div class="form-group button">
									{{ form_row(form.envoyer) }}
									{{ form_errors(form) }}
								</div>
							</div>
							{{ form_rest(form) }}
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--/ End Contact Area -->

	<!-- Start Google-map Area -->
	<div class="map-section">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="map-container">
						<div class="mapouter">
							<div class="gmap_canvas">
								<iframe width="100%" height="400" id="gmap_canvas" src="https://maps.google.com/maps?q=france%20lsaint-etienne&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
								<a href="https://embedgooglemap.net/129/"></a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Google-map Area -->
	<a href="#" class="scroll-top btn-hover">
		<em class="fas fa-angle-up"></em>
	</a>
{% endblock %}
