<div class="my-3">
	<ul class="banner-menu mt-1">
		{% if app.user %}
			<li class="menu-inline-item">
				<a class="menu-link" href=" {{ path('user_edit')}} ">
					<i class="fas fa-user-circle mx-1"></i>
					{{ app.user.email }}</a>
			</li>
			{% if is_granted('ROLE_ADMIN') %}
				<li>
					<a href="{{ path('app_register') }}">
						<i class="fas fa-id-badge mx-1"></i>
						Enregistrer un utilisateur</a>
				</li>
				<li>
					<a href="{{ path('accounts_index') }}">
						<i class="fas fa-id-badge mx-1"></i>
						Voir les utilisateurs</a>
				</li>
			{% endif %}

			{# delete form################################ #}
			<li>
				<a href="#" onclick="event.preventDefault(); document.getElementById('js-logout-form').submit();">
					<i class="fas fa-sign-out-alt mx-1"></i>
					Logout</a>
			</li>
			<form id="js-logout-form" action="{{ path('app_logout') }}" method="POST" style="display: none;">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
			</form>
			{# delete form################################ #}
		{% else %}
			<li>
				<a href="{{ path('app_login') }}">
					<i class="fas fa-sign-in-alt"></i>
					Connexion</a>
			</li>
		{% endif %}
	</ul>
</div>
