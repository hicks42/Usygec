<div class="d-flex justify-content-end w-100">
	<div class="my-0">
		{% if is_granted('ROLE_ADMIN') %}
			<ul class="banner-menu mx-2">
				<li class="menu-inline-item mb-2">
					<a href="{{ path('app_register') }}" class="link-secondary mt-1">
						<i class="fa-solid fa-user-plus me-1"></i>Utilisateur</a>
				</li>
				<li class="menu-inline-item">
					<a href="{{ path('accounts_index') }}" class="link-secondary mt-1">
						<i class="fa-solid fa-eye me-1"></i>
						Utilisateurs</a>
				</li>
			</ul>
		{% endif %}
	</div>
	<div class="my-0">
		<ul class="banner-menu mx-2">
			{% if app.user %}
				<li class="menu-inline-item mb-2">
					<a href=" {{ path('ezreview')}}" class="link-secondary mt-1">
						<i class="fas fa-user-circle me-2"></i>
						{{ app.user.nickName }}</a>
				</li>
				<li class="menu-inline-item">
					<div class="d-flax justify-content-between" >
						<a href=" {{ path('lobby')}}" class="link-secondary mt-1">
							<i class="fa-solid fa-door-open me-1"></i>
							Lobby</a>
						<a href="#" onclick="event.preventDefault(); document.getElementById('js-logout-form').submit();" class="link-secondary mt-1">
							<i class="fas fa-sign-out-alt ms-2"></i>
							Logout</a>
					</div>
				</li>
				<form id="js-logout-form" action="{{ path('app_logout') }}" method="POST" style="display: none;">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
				</form>
			{% else %}
				<li>
					<a href="{{ path('app_login') }}" class="link-secondary mt-1">
						<i class="fas fa-sign-in-alt me-2"></i>
						Connexion</a>
				</li>
			{% endif %}
		</ul>
	</div>
</div>
