{% apply inline_css %}
<style>
	.container {
		background-color: #F3F3F3;
		font-family: "Spartan", sans-serif;
		font-weight: normal;
		font-style: normal;
		color: #7A7A7A;
		overflow-x: hidden;
		font-size: 14px;
	}

	.mail-container {
		margin: 100px auto;
		width: 90%;
	}

	.content {
		border-radius: 0.5em;
		background-color: white;
	}

	form > label {
		margin: 10px;
	}

	.image-container {
		border-top-left-radius: 0.5em;
		border-top-right-radius: 0.5em;
		align-items: center;
		display: flex;
		justify-content: space-around;
		overflow: hidden;
		max-height: 200px;
		width: 100%;
	}

	.mail-content {
		padding: 0 2rem 2rem;
	}

	.title {
		margin-top: -5rem;
		display: flex;
	}

	.title > h1 {
		font-size: 2rem;
		color: orange;
		background-color: navy;
	}

	.message {
		margin: 20px 0 5px;
		text-align: justify;
	}

	.bouton-container {
		align-items: center;
		display: flex;
		justify-content: space-around;
	}

	.btn {
		display: block;
		text-align: center;
		text-decoration: none;
		vertical-align: middle;
		cursor: pointer;
		border-radius: 5px;
		font-size: 1rem;
		width: 40%;
		padding: 1rem;
		margin: 0 10px;
	}

	.gd {
		color: #fff;
		background-color: #2E924F;
	}

	.bd {
		color: #000;
		background-color: #F9B338;
	}

	@media(min-width: 992px) {
		.mail-container {
			flex: 0 0 auto;
			width: 100%;
		}
	}
</style>
<div class="container">
	<div class="mail-container">
		<div class="content">
			<div class="banner-container">
				<div class="image-container">
					<img src="{{ email.image('@images/' ~ imageName)}}" alt="Logo">
				</div>
				<div class="title">
					<h1>{{structure}}</h1>
				</div>
			</div>
			<div class="mail-content">
				<h2>{{ subject }}</h2>
				<div class="message">Bonjour.<br>
					<p>
						Vous avez récemment été accueillis dans notre établissement :
						<strong>"{{structure}}"</strong>.
					</p>
					<p>
						Soucieux de l'amélioration continue de nos prestations et afin de répondre au mieux à vos attentes, nous avons mis en place cette enquête de satisfaction.
					</p>
					<p>
						Toutes les données recueillies restent confidentielles et seront traitées de manière anonyme.
					</p>
					<h3>
						Qu'avez vous pensé de la qualité de nos services ? :
					</h3>
				</div>
				<div class="bouton-container"><br>
					{% set returnUrl = app.request.getSchemeAndHttpHost() ~ "/badreview/" ~ structureId %}
					<a
						href="{{returnUrl}}" class="btn bd">
						{# <a href="{{ app.request.getSchemeAndHttpHost() }}{{ badRevUrl }}" class="btn-bd"> #}
						plutot mécontent</a>
					<a href="{{ googleUrl }}" class="btn gd">
						plutot satisfait</a>
				</div>
			</div>
		</div>
	</div>
</div>
{% endapply %}
