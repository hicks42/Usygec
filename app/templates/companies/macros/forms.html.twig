{# form to make a new activity #}
{% macro newForm(form) %}
	{{ form_row(form.name) }}
	{{ form_row(form.description) }}
	<div class="row d-flex justify-content-between">
		<div class="col-3">
		{# <div id="reminderPicker" class="new-dueDate mx-2"></div>
			{{ form_row(form.reminder, { 'type': "hidden", 'id': 'result'}) }} #}
			{# {{ form_row(form.reminder, {'attr':{'class': 'new-reminder mx-2'}}) }} #}
			<label for="reminder-{{ form.vars.id }}">Reminder:</label>
				{{ form_widget(form.reminder, { 'id': 'reminder-' ~ form.vars.id, 'attr': { 'class': 'datetime-picker mx-2' } }) }}
		</div>
		<div class="col-3">
		{# <div id="dueDatePicker" class="new-dueDate mx-2"></div>
			{{ form_row(form.dueDate, { 'type': "hidden", 'id': 'result'}) }} #}
			{# {{ form_row(form.dueDate, {'attr':{'class': 'new-dueDate mx-2'}}) }} #}
			<label for="dueDate-{{ form.vars.id }}">Due Date:</label>
				{{ form_widget(form.dueDate, { 'id': 'dueDate-' ~ form.vars.id, 'attr': { 'class': 'datetime-picker mx-2' } }) }}
		</div>
		<div class="new-active" style="display: none;">
			{{ form_row(form.isActive, { 'checked': 'checked' }) }}
		</div>
		<div class="col-6"></div>
	</div>
{% endmacro newForm %}

