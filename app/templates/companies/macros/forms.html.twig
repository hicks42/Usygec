		{{ form_row(form.name)}}
		{{ form_row(form.description)}}
		<div id="{{ form.vars.name }}" class="info-row row d-flex justify-content-between ">
			<div class="col-3">
			{# <div id="reminderPicker" class="mx-2"></div>
				{{ form_row(form.reminder, { 'type': "hidden", 'id': 'result'}) }} #}
				{# {{ form_row(form.reminder, {'attr':{'class': 'mx-2'}}) }} #}
				<label for="reminder-{{ form.vars.id }}">Reminder:</label>
				{{ form_widget(form.reminder, { 'id': 'reminder-' ~ form.vars.id, 'attr': { 'class': 'datetime-picker mx-2' } }) }}
			</div>
			<div class="col-3">
			{# <div id="dueDatePicker" class="mx-2"></div>
				{{ form_row(form.dueDate, { 'type': "hidden", 'id': 'result'}) }} #}
				{# {{ form_row(form.dueDate, {'attr':{'class': 'mx-2'}}) }} #}
				<label for="dueDate-{{ form.vars.id }}">Due Date:</label>
				{{ form_widget(form.dueDate, { 'id': 'dueDate-' ~ form.vars.id, 'attr': { 'class': 'datetime-picker mx-2' } }) }}
			</div>
			<div class="col-6">
				{{ form_row(form.isActive)}}
			</div>
		</div>
	</div>
{% endmacro existForm %}
