{# form for existing activities #}
{% macro existForm(form) %}
	<div class="col-md-12 p-1">
		{{ form_widget(form.name)}}
		{{ form_widget(form.description)}}
		<div id="{{ form.vars.name }}" class="info-row row d-flex justify-content-between mt-1">
			<div class="col-4 d-flex justify-content-between text-nowrap">
				{{ form_label(form.reminder) }}{{ form_widget(form.reminder, { 'id': 'reminder-' ~ form.vars.id }) }}
				<a class="input-button" title="toggle" data-toggle><i class="icon-calendar"></i></a>
			</div>
			<div class="col-4 d-flex justify-content-between text-nowrap">
				{{ form_label(form.dueDate) }}{{ form_widget(form.dueDate, { 'id': 'dueDate-' ~ form.vars.id }) }}
				<a class="input-button" title="toggle" data-toggle><i class="icon-calendar"></i></a>
			</div>
			<div class="col-2 d-flex justify-content-between text-nowrap">
				{{ form_row(form.isActive)}}
			</div>
		</div>
	</div>
{% endmacro existForm %}
