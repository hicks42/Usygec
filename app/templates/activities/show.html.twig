{% extends 'base.html.twig' %}

{% block title %}Activities
{% endblock %}

{% block content %}
	<h1>Activities</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ activity.id }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ activity.description }}</td>
			</tr>
			<tr>
				<th>DueDate</th>
				<td>{{ activity.dueDate ? activity.dueDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_customer_activities') }}">back to list</a>

	<a href="{{ path('app_activities_edit', {'id': activity.id}) }}">edit</a>

	{{ include('activities/_delete_form.html.twig') }}
{% endblock %}
