{% extends 'ezreview_base.html.twig' %}

{% block title %}Création d'un utilisateur
{% endblock %}


{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-lg-12 co-12">
				<div class="form-container">
					<h3>Créer un Utilisateur :</h3>
					{{ form_start(registrationForm) }}
					<div class="row">
						<div class="col-md-12">
							{{ form_row(registrationForm.email) }}
							{{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
							{# {{ form_row(registrationForm.agreeTerms) }} #}
							<button type="submit" class="btn btn-primary btn-lg btn-block my-5">Créer</button>
						</div>
					</div>
					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
