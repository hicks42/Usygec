{% extends 'ezreview_base.html.twig' %}

{% block title %}Compte de
	{{ user.company}}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="http://localhost:8080/wip.scss">
{% endblock stylesheets %}

{% block javascripts %}
	{{ parent() }}
	<script src="http://localhost:8080/wip.js"></script>
{% endblock javascripts %}

{% block content %}
	<h2>Compte de
		{{ user.company}}</h2>
	<div class="my-3">
		<div class="bg-light rounded overflow-hidden my-3 p-2">
			<div class="my-4">
				<h5>Société :</h5>
				<strong>{{ user.company}}</strong>
			</div>
		</div>
		<div class="bg-light rounded overflow-hidden my-3 p-2">
			<div class="my-4">
				<h5>e-mail :</h5>
				<small>(login et envois/réception de l'enquete)</small><br>
				<strong>{{user.email}}</strong>
			</div>
		</div>
		<div class="bg-light rounded overflow-hidden my-3 p-2">
			<div class="my-4">
				<h5>Etablissements:</h5>
				<ul class="structures">
					{% for structure in user.structures %}
						<li>
							<hr>
							<div class="d-flex justify-content-between align-items-center m-1 ml-4">
								<strong>-
									{{ structure.name }}</strong>
								<a href="{{ path('enquete', {'id': structure.id}) }}" class="btn btn-secondary btn-sm  w-3">Envoyer mail</a>

								{# <a href="{{ path('download', {'id': structure.id}) }}" type="submit" class="btn btn-secondary btn-sm  w-3">charger un fichier</a> #}
								<a href="#" type="submit" id="download-btn" data-structureid="{{structure.id}}" class="btn btn-secondary btn-sm  w-3">charger un fichier</a>
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="d-flex justify-content-around text-center">
			<a href="{{ path('user_edit') }}" class="btn btn-primary btn  w-3">Modifier votre compte</a>
		</div>

		<div class="download-container d-flex justify-content-around">
			<div class="download-popup">
				<button class="close-popup">x</button>
				{{ form_start(form, {"method": "POST"}) }}
				<h4 id="form-title">Selectionnez un fichier csv</h4>
				{{ form_row(form.csvFile) }}
				<button type="submit" class="submit-download">Traiter</button>
				{# {% do form.structureId.setRendered %} #}
				{{ form_widget(form._token) }}
				{{ form_end(form, {'render_rest': false}) }}
			</div>
		</div>
	{% endblock %}
