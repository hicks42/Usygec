{% extends 'ezreview_base.html.twig' %}

{% block title %}Compte de
	{{ user.company}}
{% endblock %}

{% block content %}

	<div class="container">
		<div class="row">
			<div class="col-lg-12 co-12">
				<div class="form-container">
					<h2>Compte de
						{{ user.company}}</h2>
					<div class="my-3">
						<div class="bg-light rounded overflow-hidden my-3 p-2">
							<div class="my-4">
								<h5>Société :</h5>
								<strong>{{ user.company}}</strong>
							</div>
						</div>
						<div class="bg-light rounded overflow-hidden my-3 p-2">
							<div class="my-4">
								<h5>e-mail :</h5>
								<small>(login et envois/réception de l'enquete)</small><br>
								<strong>{{user.email}}</strong>
							</div>
						</div>
						<div class="bg-light rounded overflow-hidden my-3 p-2">
							<div class="my-4">
								<h5>Etablissements:</h5>
								<ul class="structures">
									{% for structure in user.structures %}
										<li>
											<div class="d-flex justify-content-around align-items-center">
												<strong>-
													{{ structure.name }}</strong>
												<a href="{{ path('enquete', {'id': structure.id}) }}" class="btn btn-secondary btn-sm  w-3">Envoyer mail</a>
											</div>
										</li>
									{% endfor %}
								</ul>
							</div>
						</div>
						<div class="d-flex justify-content-around text-center">
							<a href="{{ path('user_edit') }}" class="btn btn-primary btn  w-3">Modifier votre compte</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
