{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!
{% endblock %}

{% block content %}

	<div class="container">
		<div class="row">
			<div class="col-lg-12 co-12">
				<div class="form-container">
					<h3>Ceci est la page de votre compte</h3>
					<div class="w-50 my-5">
						<div class="my-2">
							<strong>e-mail:</strong>
							{{user.email}}
						</div>
						<div class="my-2">
							<strong>Url googlereview:
							</strong><br>
							{{(user.googlUrl|slice(34, 50) ~ '...')|raw}}</div>
					</div>
				</div>
				<a href="{{ path('account_edit') }}" class="btn btn-primary btn-lg btn-block">Modifier</a>
			</div>
		</div>
	</div>
{% endblock %}
