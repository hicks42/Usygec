{% extends 'logged_in_base.html.twig' %}

{% block title %}Modification email
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-12 mt-3">
			<h3>Modifier l'email du compte</h3>
			{{ form_start(form, {"method": "POST"}) }}
			{{ form_row(form.email) }}
			<div class="col-12 d-flex justify-content-around">
				<a href="{{ path('accounts_index') }}" class="btn btn-outline-secondary btn-sm my-5">
					<i class="fa-solid fa-angles-left"></i>
					Retour</a>
				<button type="submit" class="btn btn-primary btn-sm my-5">
					Enregistrer les modifications
				</button>
				{# {{ form_widget(form._token) }} #}
				{# {{ form_end(form, {'render_rest': false}) }} #}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
